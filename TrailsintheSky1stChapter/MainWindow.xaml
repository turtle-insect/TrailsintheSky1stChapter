<Window x:Class="TrailsintheSky1stChapter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrailsintheSky1stChapter"
        mc:Ignorable="d"
		WindowStartupLocation="CenterScreen"
        Title="空の軌跡 the 1st" Height="400" Width="600">
	<Window.DataContext>
		<local:ViewModel/>
	</Window.DataContext>
	<Window.Resources>
		<local:CharacterIDConverter x:Key="CharacterIDConverter"/>
	</Window.Resources>
	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="File">
				<MenuItem Header="Open" Command="{Binding OpenFileCommand}"/>
				<MenuItem Header="Save" Command="{Binding SaveFileCommand}"/>
				<Separator/>
				<MenuItem Header="Import" Command="{Binding ImportFileCommand}"/>
				<MenuItem Header="Export" Command="{Binding ExportFileCommand}"/>
			</MenuItem>
		</Menu>
		<ToolBar DockPanel.Dock="Top">
			<ComboBox ItemsSource="{Binding PlatForms}" SelectedIndex="{Binding PlatFormIndex}"/>
		</ToolBar>
		<TabControl>
			<TabItem Header="General">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition/>
						<RowDefinition/>
						<RowDefinition/>
						<RowDefinition/>
						<RowDefinition/>
						<RowDefinition/>
						<RowDefinition/>
						<RowDefinition/>
						<RowDefinition/>
						<RowDefinition/>
						<RowDefinition Height="2*"/>
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition/>
						<ColumnDefinition/>
						<ColumnDefinition Width="20"/>
						<ColumnDefinition Width="5"/>
						<ColumnDefinition/>
						<ColumnDefinition/>
						<ColumnDefinition Width="20"/>
					</Grid.ColumnDefinitions>
					<Label Content="MIRA"/>
					<TextBox Grid.Column="1" Text="{Binding General.Money, UpdateSourceTrigger=PropertyChanged}"/>
					<Label Grid.Row="1" Content="Sepith" FontWeight="Bold"/>
					<Label Grid.Row="2" Content="Earth"/>
					<TextBox Grid.Row="2" Grid.Column="1" Text="{Binding General.Earth, UpdateSourceTrigger=PropertyChanged}"/>
					<Label Grid.Row="3" Content="Water"/>
					<TextBox Grid.Row="3" Grid.Column="1" Text="{Binding General.Water, UpdateSourceTrigger=PropertyChanged}"/>
					<Label Grid.Row="4" Content="Fire"/>
					<TextBox Grid.Row="4" Grid.Column="1" Text="{Binding General.Fire, UpdateSourceTrigger=PropertyChanged}"/>
					<Label Grid.Row="5" Content="Wind"/>
					<TextBox Grid.Row="5" Grid.Column="1" Text="{Binding General.Wind, UpdateSourceTrigger=PropertyChanged}"/>
					<Label Grid.Row="6" Content="Time"/>
					<TextBox Grid.Row="6" Grid.Column="1" Text="{Binding General.Time, UpdateSourceTrigger=PropertyChanged}"/>
					<Label Grid.Row="7" Content="Space"/>
					<TextBox Grid.Row="7" Grid.Column="1" Text="{Binding General.Space, UpdateSourceTrigger=PropertyChanged}"/>
					<Label Grid.Row="8" Content="Mirage"/>
					<TextBox Grid.Row="8" Grid.Column="1" Text="{Binding General.Mirage, UpdateSourceTrigger=PropertyChanged}"/>
					<Label Grid.Row="9" Content="Mass"/>
					<TextBox Grid.Row="9" Grid.Column="1" Text="{Binding General.Mass, UpdateSourceTrigger=PropertyChanged}"/>
				</Grid>
			</TabItem>
			<TabItem Header="Character">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition/>
						<ColumnDefinition/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>
					<ListBox x:Name="ListBoxCharacters" ItemsSource="{Binding Characters}">
						<ListBox.ItemTemplate>
							<DataTemplate>
								<Label Content="{Binding ID, Converter={StaticResource CharacterIDConverter}}"/>
							</DataTemplate>
						</ListBox.ItemTemplate>
					</ListBox>
					<Grid Grid.Column="1">
						<Grid.RowDefinitions>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition Height="4*"/>
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition/>
							<ColumnDefinition/>
						</Grid.ColumnDefinitions>
						<Label Content="Lv"/>
						<Label Grid.Row="1" Content="Exp"/>
						<TextBox Grid.Row="1" Grid.Column="1"
								 Text="{Binding ElementName=ListBoxCharacters, Path=SelectedItem.Exp, UpdateSourceTrigger=PropertyChanged}"/>
						<Label Grid.Row="2" Content="HP"/>
						<TextBox Grid.Row="2" Grid.Column="1"
								 Text="{Binding ElementName=ListBoxCharacters, Path=SelectedItem.HP, UpdateSourceTrigger=PropertyChanged}"/>
						<Label Grid.Row="3" Content="MaxHP"/>
						<TextBox Grid.Row="3" Grid.Column="1"
								 Text="{Binding ElementName=ListBoxCharacters, Path=SelectedItem.MaxHP, UpdateSourceTrigger=PropertyChanged}"/>
						<Label Grid.Row="4" Content="EP"/>
						<TextBox Grid.Row="4" Grid.Column="1"
								 Text="{Binding ElementName=ListBoxCharacters, Path=SelectedItem.EP, UpdateSourceTrigger=PropertyChanged}"/>
						<Label Grid.Row="5" Content="MaxEP"/>
						<TextBox Grid.Row="5" Grid.Column="1"
								 Text="{Binding ElementName=ListBoxCharacters, Path=SelectedItem.MaxEP, UpdateSourceTrigger=PropertyChanged}"/>
					</Grid>
				</Grid>
			</TabItem>
			<TabItem Header="Party">
				<ListBox ItemsSource="{Binding Party}">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal">
								<Button Content="..." Width="50"
										Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:MainWindow}, Path=DataContext.ChoicePartyCommand}"
										CommandParameter="{Binding}"/>
								<Label Content="{Binding Value, Converter={StaticResource CharacterIDConverter}}"/>
							</StackPanel>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</TabItem>
			<TabItem Header="Item">
				<ListBox ItemsSource="{Binding Items}">
					<ListBox.Resources>
						<local:ItemIDConverter x:Key="ItemIDConverter"/>
					</ListBox.Resources>
					<ListBox.ItemTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal">
								<CheckBox IsChecked="{Binding New}" Content="New" VerticalAlignment="Center"/>
								<CheckBox IsChecked="{Binding HasHistory}" Content="History" Margin="5, 0, 5, 0" VerticalAlignment="Center"/>
								<TextBox Text="{Binding Count}" Width="50"/>
								<Label Content="{Binding ID, Converter={StaticResource ItemIDConverter}}"/>
							</StackPanel>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</TabItem>
			<TabItem Header="Monster">
				<ListBox ItemsSource="{Binding Monsters}">
					<ListBox.Resources>
						<local:MonsterIDConverter x:Key="MonsterIDConverter"/>
					</ListBox.Resources>
					<ListBox.ItemTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal">
								<CheckBox IsChecked="{Binding Visible}" VerticalAlignment="Center"/>
								<Label Content="？？？"/>
								<TextBox Text="{Binding Lv}" Width="50"/>
								<Label Content="{Binding ID, Converter={StaticResource MonsterIDConverter}}"/>
							</StackPanel>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</TabItem>
		</TabControl>
	</DockPanel>
</Window>
